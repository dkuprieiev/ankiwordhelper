# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Security Configuration
AUTH_CODE=your_secure_authentication_code_here
# Optional: Pre-authorize a specific user ID (leave empty to require auth)
AUTHORIZED_USER_ID=
# Enable security logging
ENABLE_SECURITY_LOGS=true
# Maximum authentication attempts before temporary block
MAX_AUTH_ATTEMPTS=3

# Ollama Configuration
OLLAMA_URL=http://localhost:11434/api/generate
OLLAMA_MODEL=gemma2:9b

# Anki Configuration
ANKI_URL=http://localhost:8765
ANKI_DECK_NAME=Default
ANKI_MODEL_NAME=Basic

# Bot Configuration
MAX_GENERATION_ATTEMPTS=4
GENERATION_TIMEOUT=60
SYNC_TIMEOUT=30
SPELL_CHECK_TIMEOUT=20

# Logging
LOG_LEVEL=INFO